<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaQuimera.Resources.Styles.AppStyles">
    
    <!-- Colores -->
    <Color x:Key="LightGreen">#f0f9f0</Color>
    <Color x:Key="DarkGreen">#204921</Color>
    <Color x:Key="MediumGreen">#2D5425</Color>
    <Color x:Key="TextColor">#333</Color>

    <!-- Estilos -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource LightGreen}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource MediumGreen}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>

    <Style TargetType="StackLayout">
        <Setter Property="Padding" Value="10" />
    </Style>
</ResourceDictionary>